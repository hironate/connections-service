# Server Configuration
NODE_ENV=development
PORT=3004

# Nango Configuration
NANGO_API_URL=https://api.nango.dev
NANGO_SECRET_KEY=your_nango_secret_key
NANGO_PUBLIC_KEY=your_nango_public_key
NANGO_WEBHOOK_SECRET=your_nango_webhook_secret

# Authentication & Security
JWT_SECRET=your-jwt-secret-for-service-tokens
OIDC_JWKS_URL=https://your-ory-instance.com/.well-known/jwks.json
OIDC_ISSUER=https://your-ory-instance.com

# mTLS Configuration
MTLS_CERT_PATH=/path/to/connections-service.crt
MTLS_KEY_PATH=/path/to/connections-service.key
MTLS_CA_PATH=/path/to/ca.crt
WUWEI_API_URL=https://api.wuwei.app

# Database Configuration
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_DATABASE=connections_service
DB_HOST=cs-postgres
DB_PORT=5434

# For production
DB_USERNAME=your_prod_user
DB_NAME=your_prod_db_name

# Service Configuration
SERVICE_NAME=connections-service
LOG_LEVEL=info
